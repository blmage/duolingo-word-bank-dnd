{
    "env": {
        "browser": true,
        "es6": true,
        "webextensions": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:jsdoc/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
         "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "jsdoc"
    ],
    "rules": {
    },
    "settings": {
        "jsdoc": {
            "mode": "typescript"
        }
    }
}
